<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteX="384dp"
    tools:layout_editor_absoluteY="25dp">


    <TextView
        android:id="@+id/SmsContentTextView"
        android:layout_width="324dp"
        android:layout_height="177dp"
        android:layout_marginEnd="16dp"
        android:text="@string/textview"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/sendSmsButton"
        android:layout_width="wrap_content"
        android:layout_height="45dp"

        android:layout_marginEnd="16dp"
        android:layout_marginTop="88dp"
        android:text="@string/button"
        app:layout_constraintEnd_toEndOf="@+id/shanXunTextView"
        app:layout_constraintTop_toBottomOf="@+id/shanXunTextView" />

    <TextView
        android:id="@+id/shanXunTextView"
        android:layout_width="323dp"
        android:layout_height="190dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:text="闪讯密码信息框"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SmsContentTextView" />


</android.support.constraint.ConstraintLayout>